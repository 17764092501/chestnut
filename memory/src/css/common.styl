$primary = #7000A6
$darkPrimary = #600090
$bgPrimary = #6122A4

.button {
  background-color $primary
  padding 4px 40px
  outline none
  border 6px solid $darkPrimary
  border-radius 4px
  cursor pointer
  font-family fangsong
  font-size 2rem
  color #fff
  font-weight bold
  letter-spacing 10px
  transition all .2s linear

  &:hover {
    color #000
  }

  &:focus {
    color #fff
  }

  &:active {
    font-size 1.8rem
  }
}